{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021"],
		"module": "Node16",
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"types": ["@types/node", "node"],
		"paths": {
			"@webgal/language-server": ["packages/language-server/src"],
			"@webgal/language-core": ["packages/language-core/src"],
			"@webgal/language-client": ["packages/language-client/src"]
		}
	},
	"exclude": ["node_modules", "dist", "build", "coverage", "test", "scripts"]
}
