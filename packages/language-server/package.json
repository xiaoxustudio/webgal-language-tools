{
	"name": "@webgal/language-server",
	"version": "0.0.1",
	"main": "build/index.cjs",
	"module": "build/index.mjs",
	"types": "build/index.d.mts",
	"license": "MIT",
	"files": [
		"build/**/*",
		"bin"
	],
	"exports": {
		".": {
			"types": "./build/index.d.mts",
			"browser": "./build/browser.mjs",
			"import": "./build/index.mjs",
			"require": "./build/index.cjs"
		},
		"./utils": {
			"types": "./build/utils.d.mts",
			"import": "./build/utils.mjs",
			"require": "./build/utils.cjs"
		},
		"./browser": {
			"types": "./build/browser.d.mts",
			"import": "./build/browser.mjs",
			"require": "./build/browser.cjs"
		}
	},
	"bin": {
		"webgal-language-server": "./bin/webgal-language-server.js"
	},
	"scripts": {
		"build": "tsdown",
		"gen": "tsx scripts/gen.ts",
		"dev": "node bin/webgal-language-server.js --stdio",
		"dev:ws": "node bin/webgal-language-server.js --ws=3001",
		"format": " prettier --write \"src/**/*.ts\"",
		"lint": "eslint src --ext ts --fix",
		"typecheck": "tsc --noEmit",
		"watch": "tsdown --watch"
	},
	"dependencies": {
		"@volar/language-core": "~2.4.0",
		"@volar/language-service": "~2.4.0",
		"@volar/language-server": "~2.4.0",
		"@volar/typescript": "~2.4.0",
		"@webgal/language-service": "workspace:*",
		"@webgal/language-core": "workspace:*",
		"tsc-alias": "^1.8.16",
		"vscode-languageserver": "^9.0.1",
		"vscode-ws-jsonrpc": "^3.4.0",
		"vscode-languageserver-textdocument": "^1.0.11",
		"vscode-uri": "^3.0.8",
		"ws": "^8.18.3"
	},
	"devDependencies": {
		"@types/ws": "^8.18.1",
		"tsx": "^4.21.0",
		"tsdown": "^0.20.3"
	}
}
