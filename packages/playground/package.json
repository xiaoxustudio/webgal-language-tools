{
	"name": "playground",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/xiaoxustudio/webgal-language-tools.git",
		"directory": "packages/playground"
	},
	"scripts": {
		"dev": "vite",
