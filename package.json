{
	"private": true,
	"packageManager": "pnpm@10.29.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/xiaoxustudio/webgal-language-tools.git"
	},
	"scripts": {
		"dev": "lerna run dev --scope playground",
		"dev:lsp": "lerna run dev --scope @webgal/language-server",
		"dev:lsp-ws": "lerna run dev:ws --scope @webgal/language-server",
		"build": "lerna run build --ignore=playground --ignore=webgal-for-vscode",
		"build:vsc": "lerna run build --scope webgal-for-vscode",
		"build:core": "lerna run build --scope @webgal/language-core",
		"build:service": "lerna run build --scope @webgal/language-service",
		"build:server": "lerna run build --scope @webgal/language-server",
		"build:playground": "lerna run build --scope playground",
		"watch": "lerna run watch --scope webgal-for-vscode",
		"pack": "lerna run pack --scope webgal-for-vscode",
		"release": "lerna run release --scope webgal-for-vscode",
		"lint": "lerna run lint",
		"lint:vsc": "lerna run lint --scope webgal-for-vscode",
		"lint:core": "lerna run lint --scope @webgal/language-core",
		"lint:service": "lerna run lint --scope @webgal/language-service",
		"lint:server": "lerna run lint --scope @webgal/language-server",
		"lint:playground": "lerna run lint --scope playground",
		"format": "lerna run format",
		"format:vsc": "lerna run format --scope webgal-for-vscode",
		"format:core": "lerna run format --scope @webgal/language-core",
		"format:service": "lerna run format --scope @webgal/language-service",
		"format:server": "lerna run format --scope @webgal/language-server",
		"format:playground": "lerna run format --scope playground",
		"typecheck": "lerna run typecheck",
		"typecheck:vsc": "lerna run typecheck --scope webgal-for-vscode",
		"typecheck:core": "lerna run typecheck --scope @webgal/language-core",
		"typecheck:service": "lerna run typecheck --scope @webgal/language-service",
		"typecheck:server": "lerna run typecheck --scope @webgal/language-server",
		"typecheck:playground": "lerna run typecheck --scope playground"
	},
	"devDependencies": {
		"@types/node": "latest",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"eslint": "^8.56.0",
		"lerna": "^9.0.4",
		"prettier": "^3.8.1",
		"typescript": "latest"
	},
	"pnpm": {
		"overrides": {
			"@codingame/monaco-vscode-editor-api": "26.1.1",
			"@codingame/monaco-vscode-extension-api": "26.1.1",
			"@codingame/monaco-vscode-api": "26.1.1",
			"@codingame/monaco-vscode-extensions-service-override": "26.1.1",
			"@codingame/monaco-vscode-files-service-override": "26.1.1",
			"@codingame/monaco-vscode-textmate-service-override": "26.1.1",
			"@codingame/monaco-vscode-languages-service-override": "26.1.1",
			"@codingame/monaco-vscode-theme-service-override": "26.1.1"
		}
	}
}
