{
	"private": true,
	"packageManager": "pnpm@10.29.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/volarjs/starter.git"
	},
	"scripts": {
		"dev": "pnpm --filter ./packages/playground run dev",
		"dev:lsp": "pnpm --filter ./packages/language-server run dev",
		"dev:lsp-ws": "pnpm --filter ./packages/language-server run dev:ws",
		"build": "pnpm run build:all",
		"build:all": "pnpm run build:vsc && pnpm run build:core && pnpm run build:client && pnpm run build:server",
		"build:vsc": "pnpm --filter ./packages/vscode-extension run build",
		"build:core": "pnpm --filter ./packages/language-core run build",
		"build:client": "pnpm --filter ./packages/language-client run build",
		"build:server": "pnpm --filter ./packages/language-server run build",
		"watch": "cd ./packages/vscode-extension && pnpm run watch",
		"pack": "cd ./packages/vscode-extension && pnpm run pack",
		"release": "cd ./packages/vscode-extension && pnpm run release",
		"lint": "pnpm run lint:all",
		"lint:all": "pnpm run lint:vsc && pnpm run lint:core && pnpm run lint:client && pnpm run lint:server",
		"lint:vsc": "pnpm --filter ./packages/vscode-extension run lint",
		"lint:core": "pnpm --filter ./packages/language-core run lint",
		"lint:client": "pnpm --filter ./packages/language-client run lint",
		"lint:server": "pnpm --filter ./packages/language-server run lint",
		"lint:palyground": "pnpm --filter ./packages/palyground run lint",
		"format": "pnpm run format:all",
		"format:all": "pnpm run format:vsc && pnpm run format:core && pnpm run format:client && pnpm run format:server",
		"format:vsc": "pnpm --filter ./packages/vscode-extension run format",
		"format:core": "pnpm --filter ./packages/language-core run format",
		"format:client": "pnpm --filter ./packages/language-client run format",
		"format:server": "pnpm --filter ./packages/language-server run format",
		"format:palyground": "pnpm --filter ./packages/palyground run format",
		"typecheck": "pnpm run typecheck:all",
		"typecheck:all": "pnpm run typecheck:vsc && pnpm run typecheck:core && pnpm run typecheck:client && pnpm run typecheck:server",
		"typecheck:vsc": "pnpm --filter ./packages/vscode-extension run typecheck",
		"typecheck:core": "pnpm --filter ./packages/language-core run typecheck",
		"typecheck:client": "pnpm --filter ./packages/language-client run typecheck",
		"typecheck:server": "pnpm --filter ./packages/language-server run typecheck",
		"typecheck:palyground": "pnpm --filter ./packages/palyground run typecheck"
	},
	"devDependencies": {
		"@types/node": "latest",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"eslint": "^8.56.0",
		"prettier": "^3.8.1",
		"typescript": "latest"
	}
}
