{
	"private": true,
	"packageManager": "pnpm@9.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/volarjs/starter.git"
	},
	"scripts": {
		"build:vsc": "pnpm --filter ./packages/vscode run build",
		"build:core": "pnpm --filter ./packages/language-core run build",
		"build:server": "pnpm --filter ./packages/language-server run build",
		"watch": "cd ./packages/vscode && pnpm run watch",
		"pack": "cd ./packages/vscode && pnpm run pack",
		"release": "cd ./packages/vscode && pnpm run release"
	},
	"devDependencies": {
		"@types/node": "latest",
		"typescript": "latest"
	}
}
