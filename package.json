{
	"private": true,
	"packageManager": "pnpm@9.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/volarjs/starter.git"
	},
	"scripts": {
		"build": "pnpm run build:all",
		"build:all": "pnpm run build:vsc && pnpm run build:core && pnpm run build:server",
		"build:vsc": "pnpm --filter ./packages/vscode run build",
		"build:core": "pnpm --filter ./packages/language-core run build",
		"build:server": "pnpm --filter ./packages/language-server run build",
		"watch": "cd ./packages/vscode && pnpm run watch",
		"pack": "cd ./packages/vscode && pnpm run pack",
		"release": "cd ./packages/vscode && pnpm run release",
		"lint": "pnpm run lint:all",
		"lint:all": "pnpm run lint:vsc && pnpm run lint:core && pnpm run lint:server",
		"lint:vsc": "pnpm --filter ./packages/vscode run lint",
		"lint:core": "pnpm --filter ./packages/language-core run lint",
		"lint:server": "pnpm --filter ./packages/language-server run lint",
		"format": "pnpm run format:all",
		"format:all": "pnpm run format:vsc && pnpm run format:core && pnpm run format:server",
		"format:vsc": "pnpm --filter ./packages/vscode run format",
		"format:core": "pnpm --filter ./packages/language-core run format",
		"format:server": "pnpm --filter ./packages/language-server run format"
	},
	"devDependencies": {
		"@types/node": "latest",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"eslint": "^8.56.0",
		"prettier": "^3.8.1",
		"typescript": "latest"
	}
}
